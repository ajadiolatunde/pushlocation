<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/physsontextcolorred"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/profile_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header_cover_image"
        android:background="@color/physsonblue"
        android:elevation="4dp"
        android:layout_margin="1dp"
        android:paddingBottom="24dp">

        <TextView
            android:id="@+id/user_profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="76dp"
            android:text="Phone registration"
            android:textColor="#fff"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/user_profile_short_bio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_profile_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:text="I'll take you there"
            android:textColor="#fff"
            android:textSize="14sp" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_margin="5dp"
        android:elevation="4dp"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="3dp"
        android:background="#fff" />
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="30dp"
        android:orientation="vertical">
        <ProgressBar
            android:layout_width="wrap_content"
            android:id="@+id/progressreg"
            android:layout_height="match_parent" />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="@color/physsonewhiteback"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="50dp"
                android:layout_margin="2dp"
                android:id="@+id/flagsVv"


                android:layout_height="50dp" />
            <Spinner
                android:layout_width="match_parent"
                android:layout_margin="2dp"

                android:id="@+id/flagspinner"
                android:layout_height="match_parent"></Spinner>
        </LinearLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/phoneWrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#fff"
                android:hint="Phone number"
                android:layout_marginTop="4dp">

                <EditText
                    android:id="@+id/phoneNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Phone number"
                    android:inputType="phone"
                    />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/smsWrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Sms"
                android:textColorHint="#fff"
                android:layout_marginTop="4dp">

            <EditText
                android:id="@+id/verifyNumberText"
                android:layout_width="match_parent"
                android:hint="Sms"
                android:layout_height="wrap_content"
                />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/verifyNumberButton"
            android:layout_marginTop="4dp"
            android:background="@drawable/roundcorner"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/physsonewhiteback"
            android:elevation="4dp"
            android:text="VERIFY"
            android:layout_height="wrap_content" />


    </LinearLayout>
</LinearLayout>